
extends layout

block content
    div(ng-app="angularDiagrams")
        div(ng-controller="diagramsController")
            header.navbar.navbar-fixed-top.navbar-inverse
                div.navbar-inner
                    div.container-fluid
                        div.navbar-header
                            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".bs-navbar-collapse")
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a(href="/index").navbar-brand Inicio
                        nav.collapse.navbar-collapse.bs-navbar-collapse(role="navigation")
                            ul.nav.navbar-nav
                                li
                                    a(href="https://github.com/jualoppaz/cbd/blob/master/trabajo.pdf", target="_blank").seccion Trabajo
                                li
                                    a(href="/diagrams").seccion Diagramas
                                li
                                    a(href="/contact").seccion Contacto
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a(ng-bind-template="¡Hola, {{loguedUser.user}}!")
                                li
                                    button#btn-logout.btn.btn-primary(data-toggle="modal", data-target="#myModal", style="margin-top:7px")
                                        i.icon-lock.icon-white
                                        |  Cerrar sesión

            div.panel.panel-body.col-md-12(style="padding-bottom:100px")
                div.centrar
                    h1.blue Arquitectura de la aplicación
                div(style="margin-top: 60px")
                    div.col-md-2.centrar.col-md-offset-1
                        div
                            a(href="#")
                                i.fa.fa-desktop.fa-5x
                        div
                            img(ng-src="/img/jade.png", height="100", width="200", style="margin-top: 20px; clear:both")
                    div.centrar
                        div(style="float:left").centrar
                            a.red
                                i.fa.fa-long-arrow-left.fa-3x
                        div(style="float:left")
                            a.red
                                i.fa.fa-long-arrow-right.fa-3x
                    div.col-md-2.centrar
                        div
                            a(href="#").red
                                i.fa.fa-code-fork.fa-5x
                        div
                            img(ng-src="/img/angular.png", height="100", width="100", style="margin-top: 20px")
                    div.centrar
                        div(style="float:left").centrar
                            a.green
                                i.fa.fa-long-arrow-left.fa-3x
                        div(style="float:left")
                            a.red
                                i.fa.fa-long-arrow-right.fa-3x
                    div.col-md-2.centrar
                        div
                            a(href="#").green
                                i.fa.fa-building.fa-5x
                        div
                            img(ng-src="/img/nodejs.png", height="80", width="220", style="margin-top: 20px")
                    div.centrar
                        div(style="float:left").centrar
                            a.gray
                                i.fa.fa-long-arrow-left.fa-3x
                        div(style="float:left")
                            a.green
                                i.fa.fa-long-arrow-right.fa-3x
                    div.col-md-2.centrar
                        div
                            a(href="#").gray
                                i.fa.fa-database.fa-5x
                        div
                            img(ng-src="/img/mongodb.png", height="80", width="200", style="margin-top: 20px")

            //DIAGRAMA MONGODB

            div.panel.panel-body.col-md-12(style="padding-bottom:100px")
                div.centrar
                    h1.gray Base de datos
                div(style="margin-top:60px")
                    div.col-md-2.centrar.col-md-offset-4
                        div
                            a(href="#").gray
                                i.fa.fa-database.fa-5x
                        div
                            img(ng-src="/img/mongodb.png", height="80", width="200", style="margin-top: 20px")
                    div(style="float:left")
                        div(style="float:left; margin-right:40px")
                            a(href="#").gray
                                i.fa.fa-arrows-h.fa-5x
                        div(style="float:left; margin-left:40px")
                            a(href="#").blue
                                i.fa.fa-file-text-o.fa-5x

            // DIAGRAMA NODEJS

            div.panel.panel-body.col-md-12(style="padding-bottom:100px")
                div.centrar
                    h1.green Lenguaje en el servidor
                div(style="margin-top:60px")
                    div.col-md-7.centrar.col-md-offset-3
                        div(style="float:left")
                            img(ng-src="/img/js.png", height="80", width="80", style="margin-top: 20px")
                        div(style="float:left")
                            a(href="#").blue
                                i.fa.fa-plus.fa-5x(style="margin-top: 30px; margin-left: 40px; margin-right: 40px")
                        div(style="float:left")
                            a(href="#").green
                                i.fa.fa-building.fa-5x(style="margin-top: 30px")
                        div(style="float:left")
                            a(href="#").red
                                i.fa.fa-arrow-right.fa-5x(style="margin-top: 30px; margin-left: 40px; margin-right: 40px")
                        div(style="float:left")
                            img(ng-src="/img/nodejs.png", height="80", width="220", style="margin-top: 20px")


            // DIAGRAMA DEMO

            div.panel.panel-body.col-md-12(style="padding-bottom:100px")
                div.centrar
                    h1.blue Navegador
                div.col-md-7.centrar.col-md-offset-5.centrar(style="padding-left:0px")
                    div(style="float:left")
                        a(href="#").blue
                            i.fa.fa-desktop.fa-10x(style="margin-top: 30px; margin-left: 40px; margin-right: 40px")

        include modals/alert
        include modals/confirm

block scripts
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/diagrams.js')
    script(src='/js/controllers/diagramsController.js')
    script(src='/js/form-validators/accountValidator.js')
    script(src='/js/angular.js')
    script(src='/js/angular/angularDiagrams.js')