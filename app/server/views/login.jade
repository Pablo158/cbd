
extends layout

block content
    div.login-form
        div.col-md-4.col-md-offset-4(style="margin-top:20px")
            form( method="post")#login-form.panel.panel-body
                h1 Bienvenido
                p.subheading Para acceder a la aplicación debes loguearte
                div.form-group
                    input(type="text", name="user", id='user-tf').span4.required.form-control
                div.form-group
                    input(type="password", name="pass", id='pass-tf').span4.required.form-control
                button(type="submit")#btn-login.btn.btn-primary.login-form-submit
                    i.icon-lock.icon-white
                    | Entrar
                label#remember-me.checkbox Recuérdame
                    input(type="checkbox", checked='checked')
                div.clear-fix
                hr
                div.btm-links
                    a(href='#')#forgot-password ¿Olvidaste tu contraseña?
                    a(href='/signup', style="float:right")#create-account Crea una cuenta
    include modals/alert
    include modals/lost-password

block scripts
    script(src='/vendor/jquery.min.js')
    script(src='/vendor/jquery.form.js')
    script(src='/vendor/bootstrap-modal.js')
    script(src='/vendor/bootstrap-transition.js')
    script(src='/js/views/login.js')
    script(src='/js/controllers/loginController.js')
    script(src='/js/form-validators/loginValidator.js')
    script(src='/js/form-validators/emailValidator.js')